{
  "compilerOptions": {
    "target": "esnext",
    "lib": ["ES2023"],
    "module": "esnext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": ["src", "drizzle.config.ts", "env.d.ts"]
}
